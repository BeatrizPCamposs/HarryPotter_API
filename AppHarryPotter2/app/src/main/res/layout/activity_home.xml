<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preto"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imgtopo"
        android:layout_width="159dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="126dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/openDrawerButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoharry" />

    <Button
        android:id="@+id/openDrawerButton"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="1dp"
        android:background="#00FFFFFF"
        android:onClick="menuu"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconSize="40dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toStartOf="@+id/imgtopo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="410dp"
        android:layout_height="690dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openDrawerButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="415dp"
                android:layout_height="251dp"
                app:srcCompat="@drawable/homee" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/textfilm"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="204dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/filme1"
                        android:layout_width="126dp"
                        android:layout_height="169dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="16dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/filme1" />

                    <ImageButton
                        android:id="@+id/filme2"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme2"
                        app:layout_constraintStart_toEndOf="@id/filme1"
                        app:layout_constraintTop_toTopOf="@id/filme1"
                        app:srcCompat="@drawable/filme2" />

                    <ImageButton
                        android:id="@+id/filme3"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme3"
                        app:layout_constraintStart_toEndOf="@id/filme2"
                        app:layout_constraintTop_toTopOf="@id/filme2"
                        app:srcCompat="@drawable/filme3" />

                    <ImageButton
                        android:id="@+id/filme4"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme4"
                        app:layout_constraintStart_toEndOf="@id/filme3"
                        app:layout_constraintTop_toTopOf="@id/filme3"
                        app:srcCompat="@drawable/filme4" />

                    <ImageButton
                        android:id="@+id/filme5"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme5"
                        app:layout_constraintStart_toEndOf="@id/filme4"
                        app:layout_constraintTop_toTopOf="@id/filme4"
                        app:srcCompat="@drawable/filme5" />

                    <ImageButton
                        android:id="@+id/filme6"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme6"
                        app:layout_constraintStart_toEndOf="@id/filme5"
                        app:layout_constraintTop_toTopOf="@id/filme5"
                        app:srcCompat="@drawable/filme6" />

                    <ImageButton
                        android:id="@+id/filme7"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme7"
                        app:layout_constraintStart_toEndOf="@id/filme6"
                        app:layout_constraintTop_toTopOf="@id/filme6"
                        app:srcCompat="@drawable/filme7" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/textbooks"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="204dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/filme1"
                        android:layout_width="126dp"
                        android:layout_height="169dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="16dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/book1" />

                    <ImageButton
                        android:id="@+id/filme2"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme2"
                        app:layout_constraintStart_toEndOf="@id/filme1"
                        app:layout_constraintTop_toTopOf="@id/filme1"
                        app:srcCompat="@drawable/book2" />

                    <ImageButton
                        android:id="@+id/filme3"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme3"
                        app:layout_constraintStart_toEndOf="@id/filme2"
                        app:layout_constraintTop_toTopOf="@id/filme2"
                        app:srcCompat="@drawable/book3" />

                    <ImageButton
                        android:id="@+id/filme4"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme4"
                        app:layout_constraintStart_toEndOf="@id/filme3"
                        app:layout_constraintTop_toTopOf="@id/filme3"
                        app:srcCompat="@drawable/book4" />

                    <ImageButton
                        android:id="@+id/filme5"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme5"
                        app:layout_constraintStart_toEndOf="@id/filme4"
                        app:layout_constraintTop_toTopOf="@id/filme4"
                        app:srcCompat="@drawable/book5" />

                    <ImageButton
                        android:id="@+id/filme6"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme6"
                        app:layout_constraintStart_toEndOf="@id/filme5"
                        app:layout_constraintTop_toTopOf="@id/filme5"
                        app:srcCompat="@drawable/book6" />

                    <ImageButton
                        android:id="@+id/filme7"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnfilme7"
                        app:layout_constraintStart_toEndOf="@id/filme6"
                        app:layout_constraintTop_toTopOf="@id/filme6"
                        app:srcCompat="@drawable/book7" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/textper"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="204dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/pers1"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="16dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnpers1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/person1" />

                    <ImageButton
                        android:id="@+id/pers2"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnpers2"
                        app:layout_constraintStart_toEndOf="@id/pers1"
                        app:layout_constraintTop_toTopOf="@id/pers1"
                        app:srcCompat="@drawable/person2" />

                    <ImageButton
                        android:id="@+id/pers3"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="8dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnpers3"
                        app:layout_constraintStart_toEndOf="@id/pers2"
                        app:layout_constraintTop_toTopOf="@id/pers2"
                        app:srcCompat="@drawable/person3" />

                    <ImageButton
                        android:id="@+id/pers4"
                        android:layout_width="131dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="10dp"
                        android:background="#00FFFFFF"
                        android:onClick="btnpers4"
                        app:layout_constraintStart_toEndOf="@id/pers3"
                        app:layout_constraintTop_toTopOf="@id/pers3"
                        app:srcCompat="@drawable/person4" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>