<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastro">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="-110dp">


        <ImageView
            android:id="@+id/imageVieew"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/logoharry" />

        <EditText
            android:id="@+id/username"
            style="@style/textoo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#959090"
            android:hint="Nome de usuário" />

        <EditText
            android:id="@+id/password"
            style="@style/textoo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#959090"
            android:hint="Senha"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repassword"
            style="@style/textoo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:inputType="textPassword"
            android:backgroundTint="#959090"
            android:hint="Confirmar Senha" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsignup"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/repassword"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/Dourado"
            android:fontFamily="sans-serif-black"
            android:text="Registrar"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnsignin"
            style="@style/texto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnsignup"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:background="#00FFFFFF"
            android:text="Já sou cadastrado !"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageVieew"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/cadas"
            android:textColor="@color/Dourado"
            android:textSize="35dp" />

        <Switch
            android:id="@+id/switcher"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="15dp"
            android:thumbTint="@color/Dourado" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>